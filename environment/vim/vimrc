set nocompatible
filetype on


"""""""""""""""""""""""""""""""""""""""""
"       基本设置
"""""""""""""""""""""""""""""""""""""""""
set number               " 显示行号
set nobackup             " 不备份
colorscheme delek        "配色方案
set tabstop=4            "TAB 设置
set softtabstop=4
set shiftwidth=4
set foldmethod=marker    "折叠设置
"set foldmethod=syntax
"set foldmethod=indent
set foldlevel=100
set foldclose=all        "关闭所有折叠
set autoindent           "缩进设置
set smartindent
set cindent
set fileformats=unix    "设置文件格式


"""""""""""""""""""""""""""""""""""""""""
